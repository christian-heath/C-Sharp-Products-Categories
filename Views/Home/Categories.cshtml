@{
ViewData["Title"] = "Home Page";
}
@model prodandcat.Models.Category
<h1 class="header"><a href="/Products">Products</a> | Categories</h1>
<div class="left-side">
    <h2 class="Title">New Category</h2>
    <form class='big_form' asp-controller="Home" asp-action="NewCategory" method='POST'>
        <div class="form-group">
            <span asp-validation-for="Name"></span>
            <label asp-for="Name"></label>
            <input type="text" asp-for='Name' class="form-control" id="exampleFormControlInput1">
        </div>
        <button type="submit" value='submit' class="btn btn-success">Create</button>
    </form>
</div>
<div class="right-side">
    <h2>Existing Categories</h2>
    <ul>
        @foreach(var category in @ViewBag.Categories)
        {
        <li><a href="/Categories/@category.CategoryId">@category.Name</a></li>
        }
    </ul>
</div>