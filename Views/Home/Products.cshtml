@{
ViewData["Title"] = "Home Page";
}
@model prodandcat.Models.Product
<h1 class="header">Products | <a href="/Categories">Categories</a></h1>
<div class="left-side">
    <h2 class="Title">New Product</h2>
    <form class='big_form' asp-controller="Home" asp-action="NewProduct" method='POST'>
        <div class="form-group">
            <span asp-validation-for="Name"></span>
            <label asp-for="Name"></label>
            <input type="text" asp-for='Name' class="form-control" id="exampleFormControlInput1">
        </div>
        <div class="form-group">
            <span asp-validation-for="Description"></span>
            <label asp-for="Description"></label>
            <input type="text" asp-for='Description' class="form-control" id="exampleFormControlInput1">
        </div>
        <div class="form-group">
            <span asp-validation-for="Price"></span>
            <label asp-for="Price"></label>
            <input type="text" asp-for='Price' class="form-control" id="exampleFormControlInput1">
        </div>
        <button type="submit" value='submit' class="btn btn-success">Create</button>
    </form>
</div>
<div class="right-side">
    <h2>Existing Products</h2>
    <ul>
        @foreach(var product in @ViewBag.Products)
        {
        <li><a href="/Products/@product.ProductId">@product.Name</a></li>
        }
    </ul>
</div>